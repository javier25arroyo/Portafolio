---
import Welcome from '../components/Welcome.astro';
import Skills from '../components/Skills.astro';
import Projects from '../components/Projects.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
    <main>
        <!-- üé® Hero Section -->
        <section id="home" class="reveal relative section-base section-transition">
            <Welcome />
        </section>
        
        <!-- üé® About/Skills Section -->
        <section id="about" class="reveal relative section-base section-transition pt-24 pb-32">
            <div class="container mx-auto px-6">
                <Skills />
            </div>
        </section>
        
        <!-- üé® Projects Section -->
        <section id="projects" class="reveal relative section-base section-transition pt-24 pb-32">
            <div class="container mx-auto px-6">
                <Projects />
            </div>
        </section>
        
        <!-- üé® Contact Section -->
        <section id="contact" class="reveal relative section-base section-transition pt-24 pb-32">
            <div class="container mx-auto px-6">
				<div class="text-center mb-16">
					<h2 class="text-4xl md:text-5xl font-bold mb-4 gradient-text">
						Get In Touch
					</h2>
					<p class="text-lg max-w-2xl mx-auto" style="color: var(--text-secondary);">
						Ready to bring your ideas to life? Let's collaborate and create something amazing together.
					</p>
				</div>
				
				<div class="max-w-4xl mx-auto">
					<!-- üìß Contact Info Grid -->
					<div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
						<!-- Email Card -->
						<a href="mailto:javier25arojas@gmail.com" class="group" data-track="contact-email" rel="noopener">
							<div class="glass-elevated rounded-2xl p-6 transition-all duration-300 hover:neon-glow-secondary hover-lift">
								<div class="flex items-center space-x-4">
									<div class="w-12 h-12 rounded-lg flex items-center justify-center" 
									     style="background: rgba(5, 150, 105, 0.2); color: var(--color-secondary);">
										<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
										</svg>
									</div>
									<div>
										<h4 class="font-semibold" style="color: var(--text-primary);">Email</h4>
										<p style="color: var(--text-secondary);">javier25arojas@gmail.com</p>
									</div>
								</div>
							</div>
						</a>

						<!-- Quick Response Card -->
						<div class="glass-elevated rounded-2xl p-6">
							<div class="flex items-center space-x-4">
								<div class="w-12 h-12 rounded-lg flex items-center justify-center" 
								     style="background: rgba(79, 70, 229, 0.2); color: var(--color-primary);">
									<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
									</svg>
								</div>
								<div>
									<h4 class="font-semibold" style="color: var(--text-primary);">Response Time</h4>
									<p style="color: var(--text-secondary);">Usually within 24 hours</p>
								</div>
							</div>
						</div>
					</div>
					
					<!-- üåê Social Media Section -->
					<div class="glass-premium rounded-2xl p-8 mb-8">
						<h4 class="font-semibold mb-6 text-center text-xl" style="color: var(--text-primary);">Connect with me</h4>
						<div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
							<!-- LinkedIn -->
							<a href="https://www.linkedin.com/in/javier-arroyo-268147226/" target="_blank" rel="noopener noreferrer" 
							   class="group" data-track="social-linkedin">
								<div class="card text-center hover-lift">
									<div class="w-16 h-16 rounded-xl flex items-center justify-center mb-4 mx-auto" 
									     style="background: rgba(79, 70, 229, 0.2); color: var(--color-primary);">
										<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
											<path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
										</svg>
									</div>
									<h5 class="font-semibold mb-2" style="color: var(--text-primary);">LinkedIn</h5>
									<p class="text-sm" style="color: var(--text-secondary);">Professional network</p>
								</div>
							</a>
							
							<!-- GitHub -->
							<a href="https://github.com/javier25arroyo" target="_blank" rel="noopener noreferrer" 
							   class="group" data-track="social-github">
								<div class="card text-center hover-lift">
									<div class="w-16 h-16 rounded-xl flex items-center justify-center mb-4 mx-auto" 
									     style="background: rgba(148, 163, 184, 0.2); color: var(--text-primary);">
										<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
											<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
										</svg>
									</div>
									<h5 class="font-semibold mb-2" style="color: var(--text-primary);">GitHub</h5>
									<p class="text-sm" style="color: var(--text-secondary);">Code repository</p>
								</div>
							</a>
							
							<!-- WhatsApp -->
							<a href="https://walink.co/bdf8ef" target="_blank" rel="noopener noreferrer" 
							   class="group" data-track="social-whatsapp">
								<div class="card text-center hover-lift">
									<div class="w-16 h-16 rounded-xl flex items-center justify-center mb-4 mx-auto" 
									     style="background: rgba(5, 150, 105, 0.2); color: var(--color-secondary);">
										<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
											<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.465 3.488"/>
										</svg>
									</div>
									<h5 class="font-semibold mb-2" style="color: var(--text-primary);">WhatsApp</h5>
									<p class="text-sm" style="color: var(--text-secondary);">Direct message</p>
								</div>
							</a>
						</div>
					</div>
					
					<!-- üìÑ CV Download Section -->
					<div class="glass-premium rounded-2xl p-8">
						<h4 class="font-semibold mb-6 text-center text-xl" style="color: var(--text-primary);">Download CV</h4>
						<div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
							<!-- CV Espa√±ol -->
						<a href={`${import.meta.env.BASE_URL}assets/cv/CV_Javier_Arroyo_ES.pdf`} 
							   download="CV_Javier_Arroyo_Espa√±ol.pdf" 
							   class="group" data-track="download-cv-es"
							   rel="noopener">
								<div class="card text-center hover-lift hover:neon-glow">
									<div class="w-20 h-20 rounded-xl flex items-center justify-center mb-4 mx-auto" 
									     style="background: rgba(239, 68, 68, 0.2); color: #ef4444;">
										<svg class="w-10 h-10" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
											<path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
										</svg>
									</div>
									<h5 class="font-semibold mb-2 text-lg" style="color: var(--text-primary);">CV Espa√±ol</h5>
									<div class="flex items-center justify-center space-x-2 text-sm" style="color: var(--text-secondary);">
										<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
											<path d="M5,20H19V18H5M19,9H15V3H9V9H5L12,16L19,9Z"/>
										</svg>
										<span>Download PDF</span>
									</div>
								</div>
							</a>
							
							<!-- CV English -->
						<a href={`${import.meta.env.BASE_URL}assets/cv/CV_Javier_Arroyo_EN.pdf`} 
							   download="CV_Javier_Arroyo_English.pdf" 
							   class="group" data-track="download-cv-en"
							   rel="noopener">
								<div class="card text-center hover-lift hover:neon-glow">
									<div class="w-20 h-20 rounded-xl flex items-center justify-center mb-4 mx-auto" 
									     style="background: rgba(79, 70, 229, 0.2); color: var(--color-primary);">
										<svg class="w-10 h-10" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
											<path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
										</svg>
									</div>
									<h5 class="font-semibold mb-2 text-lg" style="color: var(--text-primary);">CV English</h5>
									<div class="flex items-center justify-center space-x-2 text-sm" style="color: var(--text-secondary);">
										<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
											<path d="M5,20H19V18H5M19,9H15V3H9V9H5L12,16L19,9Z"/>
										</svg>
										<span>Download PDF</span>
									</div>
								</div>
							</a>
						</div>
					</div>
				</div>
			</div>
		</section>
    </main>
</Layout>