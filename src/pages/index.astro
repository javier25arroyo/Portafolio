---
import Welcome from '../components/Welcome.astro';
import Skills from '../components/Skills.astro';
import Projects from '../components/Projects.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
    <main>
        <!-- üé® Hero Section -->
        <section id="home" class="relative section-base section-transition">
            <Welcome />
        </section>
        
        <!-- üé® About/Skills Section -->
        <section id="about" class="reveal-fade relative section-base section-transition pt-24 pb-32">
            <div class="container mx-auto px-6">
                <Skills />
            </div>
        </section>
        
        <!-- üé® Projects Section -->
        <section id="projects" class="reveal-fade relative section-base section-transition pt-24 pb-32">
            <div class="container mx-auto px-6">
                <Projects />
            </div>
        </section>
        
        <!-- üé® Contact Section -->
        <section id="contact" class="reveal-fade relative section-base section-transition pt-24 pb-32">
            <div class="container mx-auto px-6">
				<div class="text-center mb-16 reveal">
