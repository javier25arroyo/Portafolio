---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import VeterinariaImage from '../assets/projects/veterinaria-moka.png';
import Elecciones2026Image from '../assets/projects/elecciones-2026.png';
import CodeCraftersImage from '../assets/projects/codecrafters.png';
import PuzzleGameImage from '../assets/projects/puzzle-game.png';
import DefaultProjectImage from '../assets/projects/default-project.svg?url';
import OracleDatabaseImage from '../assets/projects/oracle-database.svg?url';

type Project = {
  title: string;
  descriptionEn: string;
  descriptionEs: string;
  link: string;
  demo?: string;
  backendLink?: string;
  hasMultipleRepos?: boolean;
  image: ImageMetadata | string;
  alt: string;
  priority?: 'high' | 'low' | 'auto';
};

const projectMediaWidths = [320, 480, 640, 960];
const projectMediaSizes = '(max-width: 768px) 100vw, 320px';

const isOptimizedAsset = (image: Project['image']): image is ImageMetadata =>
  typeof image === 'object' && image !== null && 'src' in image;

const projects: Project[] = [
  {
    title: 'Veterinaria Moka',
    image: VeterinariaImage,
    alt: 'Screenshot of Veterinaria Moka management dashboard',
    descriptionEn: 'A full-stack solution for a veterinary practice.',
    descriptionEs: 'Una solución full-stack para una clínica veterinaria.',
    link: 'https://github.com/javier25arroyo/Veterinaria-Moka.git',
    priority: 'high'
  },
  {
    title: 'Elecciones 2026',
    image: Elecciones2026Image,
    alt: 'Screenshot of Elecciones 2026 platform',
    descriptionEn: 'Informative web platform for the 2026 Costa Rican elections built with Next.js 16 and TypeScript, featuring candidate profiles and interactive quizzes.',
    descriptionEs: 'Plataforma web informativa para las elecciones de Costa Rica 2026 construida con Next.js y TypeScript, con perfiles de candidatos e información interactiva.',
    link: 'https://github.com/javier25arroyo/Elecciones2026',
    demo: 'https://elecciones2026.lat/'
  },
  {
    title: 'CodeCrafters',
    image: CodeCraftersImage,
    alt: 'Screenshot of CodeCrafters serious game interface',
    descriptionEn: 'Full-stack development (Angular and Spring Boot) of a video game application for seniors to help prevent cognitive decline.',
    descriptionEs: 'Desarrollo full-stack (Angular y Spring Boot) de una aplicación de videojuegos para adultos mayores para ayudar a prevenir el deterioro cognitivo.',
    link: 'https://github.com/javier25arroyo/CodeCrafters-FrontEnd.git',
    backendLink: 'https://github.com/javier25arroyo/CodeCrafters-BackEnd.git',
    hasMultipleRepos: true
  },
  {
    title: 'Puzzle Game for Seniors',
    image: PuzzleGameImage,
    alt: 'Screenshot of the puzzle mini-game for seniors',
    descriptionEn: 'Development of a puzzle video game for seniors.',
    descriptionEs: 'Desarrollo de un videojuego de rompecabezas para adultos mayores.',
    link: 'https://javier25arroyo.github.io/puzzle-game/'
  },
  {
    title: 'CareConnect IoT System',
    image: DefaultProjectImage,
    alt: 'Abstract IoT system illustration',
    descriptionEn: 'Development of a physical server system for obstacle detection using an Ideaboard in MicroPython.',
    descriptionEs: 'Desarrollo de un sistema de servidor físico para detección de obstáculos usando una Ideaboard en MicroPython.',
    link: 'https://github.com/javier25arroyo/CareConnect.git'
  },
  {
    title: 'Oracle Tech Store DB',
    image: OracleDatabaseImage,
    alt: 'Database entity-relationship diagram preview',
    descriptionEn: 'Database management project for a tech product sales store in Oracle Database.',
    descriptionEs: 'Proyecto de gestión de base de datos para una tienda de productos tecnológicos en Oracle Database.',
    link: 'https://github.com/javier25arroyo/Proyecto-programacion-de-bases-de-datos.git'
  }
];
---

<section class="projects-section">
  <div class="container mx-auto px-6">
    <div class="title-container reveal">
      <h2 class="text-4xl md:text-5xl font-bold mb-4 gradient-text" data-i18n="projects-title" data-i18n-en="My Projects" data-i18n-es="Mis Proyectos">
        My Projects
      </h2>
    </div>
  </div>
  <div class="projects-grid reveal-stagger">
    {projects.map((project, index) => (
      <div class={`project-card reveal-scale`} style={`transition-delay: ${index * 100}ms`}>
        <div class="project-image-container">
          {isOptimizedAsset(project.image) ? (
            <Image
              src={project.image}
              alt={project.alt}
              class="project-image"
              loading="lazy"
              decoding="async"
              format="webp"
              widths={projectMediaWidths}
              sizes={projectMediaSizes}
              fetchpriority={project.priority ?? 'auto'}
            />
          ) : (
            <img
              src={project.image}
              alt={project.alt}
              class="project-image"
              loading="lazy"
              decoding="async"
              onerror={`this.onerror=null;this.src='${DefaultProjectImage}'`}
            />
          )}
          <div class="project-overlay">
            {project.hasMultipleRepos ? (
              <div class="overlay-links">
                <a href={project.link} target="_blank" rel="noopener noreferrer" class="overlay-btn" aria-label={`View ${project.title} frontend code`}>
                  <span class="btn-text">View Frontend</span>
