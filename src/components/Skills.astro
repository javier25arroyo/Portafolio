---
import TechnicalSkills from './TechnicalSkills.astro';
import SoftSkills from './SoftSkillsClean.astro';

---

<div class="container mx-auto px-6">
    <!-- Main Title -->
    <div class="text-center mb-16 reveal">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 gradient-text">
            My Skills
        </h2>
    </div>
    
    <!-- Soft Skills Section -->
    <div class="mb-20 reveal reveal-delay-100">
        <div class="text-center mb-12">
            <h3 class="text-3xl font-bold mb-4" style="color: var(--text-primary);">
                Soft Skills
            </h3>
        </div>
        <SoftSkills />
    </div>
</div>

<!-- Technical Skills Section -->
<div class="mb-20 reveal reveal-delay-200">
    <div class="text-center mb-12">
        <h3 class="text-3xl font-bold mb-4" style="color: var(--text-primary);">
            Technical Skills
        </h3>
    </div>
    <TechnicalSkills />
</div>