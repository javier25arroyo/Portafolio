---
import TechnicalSkills from './TechnicalSkills.astro';
import SoftSkills from './SoftSkillsClean.astro';

---

<section id="about" class="container mx-auto px-6">
    <!-- Main Title -->
    <div class="text-center mb-16 reveal">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 gradient-text" data-i18n="skills-title" data-i18n-en="My Skills" data-i18n-es="Mis Habilidades">
            My Skills
        </h2>
    </div>
    
    <!-- Soft Skills Section -->
    <section class="mb-20 reveal reveal-delay-100" aria-labelledby="soft-skills-heading">
        <div class="text-center mb-12">
            <h3 id="soft-skills-heading" class="text-3xl font-bold mb-4" style="color: var(--text-primary);" data-i18n="soft-skills-title" data-i18n-en="Soft Skills" data-i18n-es="Habilidades Blandas">
                Soft Skills
            </h3>
        </div>
        <SoftSkills />
    </section>
</section>

<!-- Technical Skills Section -->
<section class="mb-20 reveal reveal-delay-200" aria-labelledby="tech-skills-heading">
    <div class="text-center mb-12">
        <h3 id="tech-skills-heading" class="text-3xl font-bold mb-4" style="color: var(--text-primary);" data-i18n="tech-skills-title" data-i18n-en="Technical Skills" data-i18n-es="Habilidades TÃ©cnicas">
            Technical Skills
        </h3>
    </div>
    <TechnicalSkills />
</section>