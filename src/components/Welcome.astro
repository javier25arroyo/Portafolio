---
import Button from './Button.astro';
---
<!-- Hero Section con animaciones progresivas -->
<div class="min-h-screen relative overflow-hidden bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
  
  <!-- Elementos de fondo animados -->
  <div class="absolute inset-0 pointer-events-none">
    <!-- Geometric shapes -->
    <div class="absolute top-20 left-20 w-72 h-72 bg-blue-500/10 rounded-full blur-3xl animate-pulse animation-delay-1000"></div>
    <div class="absolute bottom-20 right-20 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl animate-pulse animation-delay-2000"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-emerald-500/5 rounded-full blur-3xl animate-pulse animation-delay-3000"></div>
    
    <!-- Grid pattern -->
    <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
  </div>

  <!-- Contenido principal con animaciones escalonadas -->
  <div class="relative z-10 flex items-center justify-center min-h-screen">
    <div class="container mx-auto px-6 py-12">
      
      <!-- Header con introducción animada -->
      <div class="text-left mb-8 animate-fade-in-up animation-delay-500">
        <div class="inline-flex items-center px-4 py-2 rounded-full bg-emerald-500/10 border border-emerald-500/20 backdrop-blur-sm mb-6">
          <div class="w-2 h-2 bg-emerald-400 rounded-full mr-3 animate-ping"></div>
          <span class="text-emerald-400 text-sm font-medium">Available for opportunities</span>
        </div>
        
        <p class="text-slate-400 text-xl font-light mb-4 animate-fade-in-up animation-delay-700">
          Hi, I'm Javier Arroyo
        </p>
        
        <!-- Título principal con efecto de escritura -->
        <h1 class="text-6xl md:text-8xl font-bold leading-tight text-white mb-6 animate-fade-in-up animation-delay-900">
          <span class="block animate-slide-in-left">Software</span>
          <span class="block bg-gradient-to-r from-blue-400 via-purple-500 to-emerald-400 bg-clip-text text-transparent animate-slide-in-right animation-delay-1200">Developer</span>
        </h1>
      </div>

      <!-- Descripción con animación -->
      <div class="max-w-4xl mb-12 animate-fade-in-up animation-delay-1400">
        <p class="text-slate-300 text-xl md:text-2xl leading-relaxed font-light">
          Crafting exceptional digital experiences through 
          <span class="text-purple-400 font-medium relative">
            innovative design
            <span class="absolute -bottom-1 left-0 w-full h-0.5 bg-gradient-to-r from-purple-400 to-blue-400 transform scale-x-0 animate-expand-line animation-delay-2000"></span>
          </span> 
          and 
          <span class="text-emerald-400 font-medium relative">
            cutting-edge technology
            <span class="absolute -bottom-1 left-0 w-full h-0.5 bg-gradient-to-r from-emerald-400 to-blue-400 transform scale-x-0 animate-expand-line animation-delay-2200"></span>
          </span>
        </p>
      </div>

      <!-- CTAs con animaciones -->
      <div class="flex flex-col sm:flex-row gap-6 mb-12 animate-fade-in-up animation-delay-1600">
        <Button href="#projects" variant="primary" size="lg" class="group">
          <span>View My Work</span>
          <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </Button>
        
        <Button href="#contact" variant="outline" size="lg" class="group">
          <span>Let's Connect</span>
          <svg class="w-5 h-5 transform group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </Button>
      </div>

      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce animation-delay-3000">
        <div class="flex flex-col items-center gap-2 text-slate-400">
          <span class="text-xs font-medium">Scroll to explore</span>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Animaciones progresivas y suaves */
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slide-in-left {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slide-in-right {
    from {
      opacity: 0;
      transform: translateX(50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes expand-line {
    from {
      transform: scaleX(0);
    }
    to {
      transform: scaleX(1);
    }
  }

  /* Grid pattern de fondo */
  .bg-grid-pattern {
    background-image: 
      linear-gradient(rgba(148, 163, 184, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(148, 163, 184, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
  }

  /* Clases de animación */
  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
    opacity: 0;
  }

  .animate-slide-in-left {
    animation: slide-in-left 0.8s ease-out forwards;
    opacity: 0;
  }

  .animate-slide-in-right {
    animation: slide-in-right 0.8s ease-out forwards;
    opacity: 0;
  }

  .animate-expand-line {
    animation: expand-line 0.8s ease-out forwards;
  }

  /* Delays progresivos */
  .animation-delay-500 { animation-delay: 0.5s; }
  .animation-delay-700 { animation-delay: 0.7s; }
  .animation-delay-900 { animation-delay: 0.9s; }
  .animation-delay-1000 { animation-delay: 1s; }
  .animation-delay-1200 { animation-delay: 1.2s; }
  .animation-delay-1400 { animation-delay: 1.4s; }
  .animation-delay-1600 { animation-delay: 1.6s; }
  .animation-delay-1800 { animation-delay: 1.8s; }
  .animation-delay-2000 { animation-delay: 2s; }
  .animation-delay-2200 { animation-delay: 2.2s; }
  .animation-delay-3000 { animation-delay: 3s; }

  /* Efectos hover mejorados */
  .group:hover .group-hover\:animate-ping {
    animation: ping 1s cubic-bezier(0, 0, 0.2, 1) infinite;
  }

  /* Transiciones suaves para elementos interactivos */
  a, button {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .animate-fade-in-up,
    .animate-slide-in-left,
    .animate-slide-in-right {
      animation-duration: 0.6s;
    }
  }

  /* Efecto de parallax sutil */
  .bg-grid-pattern {
    animation: float 20s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
</style>
