---
import heroImage from '../assets/img/hero_setup-photoroom.png';
import ThemeIcon from './ThemeIcon.astro';
---

<div class="min-h-screen flex items-center justify-center bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-700 ease-in-out">
  <div class="container mx-auto px-4 py-8 flex flex-col md:flex-row items-center justify-center gap-8">
    <div class="flex-1 flex flex-col items-start text-left">
      <div class="text-lg text-gray-500 dark:text-gray-400 mb-4 transition-colors duration-700 ease-in-out">Hi, I'm Javier Arroyo</div>
      <h1 class="text-4xl md:text-6xl font-bold mb-2 leading-tight transition-colors duration-700 ease-in-out">
        Full Stack<br />Developer
      </h1>
      <p class="text-lg max-w-xl mb-6 text-gray-600 dark:text-gray-300 transition-colors duration-700 ease-in-out">
        Transforming ideas into interactive and seamless digital experiences with cutting-edge full stack development.
      </p>
      <div class="flex gap-4 mt-4">
        <a href="#" aria-label="GitHub" class="p-3 rounded-lg bg-gray-200 dark:bg-gray-800 hover:bg-blue-500 dark:hover:bg-blue-400 transition-all duration-700 ease-in-out">
          <ThemeIcon />
        </a>
        <a href="#" aria-label="LinkedIn" class="p-3 rounded-lg bg-gray-200 dark:bg-gray-800 hover:bg-blue-500 dark:hover:bg-blue-400 transition-all duration-700 ease-in-out">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
        </a>
        <a href="#" aria-label="Mail" class="p-3 rounded-lg bg-gray-200 dark:bg-gray-800 hover:bg-blue-500 dark:hover:bg-blue-400 transition-all duration-700 ease-in-out">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M0 3v18h24v-18h-24zm21.518 2l-9.518 7.713-9.518-7.713h19.036zm-19.518 14v-11.817l10 8.104 10-8.104v11.817h-20z"/></svg>
        </a>
      </div>
    </div>
    <div class="flex-shrink-0 md:-ml-24 flex items-center justify-center md:justify-end">
      <img src={heroImage.src} alt="Javier Arroyo's setup" class="w-[22rem] h-[22rem] md:w-[32rem] md:h-[32rem] object-contain rounded-2xl shadow-2xl" />
    </div>
  </div>
</div>
