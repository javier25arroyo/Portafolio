---
import Button from './Button.astro';
---
<!-- ðŸŽ¨ Hero Section Modernizado -->
<div class="min-h-screen relative overflow-hidden hero-bg">
  
  <!-- Contenido principal con animaciones escalonadas -->
  <div class="relative z-10 flex items-center justify-center min-h-screen pt-16">
    <div class="container mx-auto px-6 py-12">
      
      <!-- Header con introducciÃ³n animada -->
      <div class="text-left mb-8 animate-fade-in-up hero-intro">
        <div class="inline-flex items-center px-4 py-2 rounded-full backdrop-blur-sm mb-6 glass-dark border border-border-light status-badge">
          <div class="w-2 h-2 rounded-full mr-3 animate-ping status-dot"></div>
          <span class="font-medium text-sm status-text">Available for opportunities</span>
        </div>
        
        <!-- Greeting con efectos impactantes -->
        <div class="greeting-container mb-4">
          <p class="text-2xl md:text-3xl font-light animate-fade-in-up greeting-text">
            <span class="greeting-word" data-word="Hi,">Hi,</span>
            <span class="greeting-word" data-word="I'm">I'm</span>
            <span class="name-highlight" data-name="Javier Arroyo">
              <span class="name-letter" data-letter="J">J</span><span class="name-letter" data-letter="a">a</span><span class="name-letter" data-letter="v">v</span><span class="name-letter" data-letter="i">i</span><span class="name-letter" data-letter="e">e</span><span class="name-letter" data-letter="r">r</span>
              <span class="name-space"> </span>
              <span class="name-letter" data-letter="A">A</span><span class="name-letter" data-letter="r">r</span><span class="name-letter" data-letter="r">r</span><span class="name-letter" data-letter="o">o</span><span class="name-letter" data-letter="y">y</span><span class="name-letter" data-letter="o">o</span>
            </span>
          </p>
        </div>
        
        <!-- TÃ­tulo principal con efecto de escritura mejorado -->
        <h1 class="text-6xl md:text-8xl font-bold leading-tight mb-6 hero-title">
          <span class="block animate-slide-in-left title-first">Software</span>
          <span class="block gradient-text animate-slide-in-right title-second">Developer</span>
        </h1>
      </div>

      <!-- DescripciÃ³n con animaciÃ³n mejorada -->
      <div class="max-w-4xl mb-12 animate-fade-in-up hero-description">
        <p class="text-xl md:text-2xl leading-relaxed font-light description-text">
          Crafting exceptional digital experiences through 
          <span class="font-medium relative text-glow highlight-innovation">
            innovative design
            <span class="absolute -bottom-1 left-0 w-full h-0.5 transform scale-x-0 animate-scale-in underline-effect"></span>
          </span> 
          and 
          <span class="font-medium relative text-glow-secondary highlight-tech">
            cutting-edge technology
            <span class="absolute -bottom-1 left-0 w-full h-0.5 transform scale-x-0 animate-scale-in underline-effect-secondary"></span>
          </span>
        </p>
      </div>

      <!-- CTAs con animaciones mejoradas -->
      <div class="flex flex-col sm:flex-row gap-6 mb-12 animate-fade-in-up hero-ctas">
        <a href="#projects" class="btn-primary group inline-flex items-center justify-center gap-3 hover-lift" data-track="hero-view-work">
          <span>View My Work</span>
          <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        
        <a href="#contact" class="btn-secondary group inline-flex items-center justify-center gap-3 hover-lift" data-track="hero-lets-connect">
          <span>Let's Connect</span>
          <svg class="w-5 h-5 transform group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </a>
      </div>

      <!-- Scroll indicator mejorado -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce scroll-indicator">
        <div class="flex flex-col items-center gap-2 scroll-text">
          <span class="text-xs font-medium">Scroll to explore</span>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- ðŸŽ¨ Estilos personalizados para animaciones -->
<style>
  /* === BACKGROUND === */
  .hero-bg {
    background: var(--gradient-hero);
    position: relative;
  }

  .hero-bg::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: 
      radial-gradient(circle at 20% 80%, rgba(79, 70, 229, 0.15) 0%, transparent 70%),
      radial-gradient(circle at 80% 20%, rgba(124, 58, 237, 0.12) 0%, transparent 70%),
      radial-gradient(circle at 40% 40%, rgba(5, 150, 105, 0.08) 0%, transparent 70%);
    animation: float 20s ease-in-out infinite;
    pointer-events: none;
  }

  .hero-bg::after {
    content: '';
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(var(--border-subtle) 1px, transparent 1px),
      linear-gradient(90deg, var(--border-subtle) 1px, transparent 1px);
    background-size: 50px 50px;
    opacity: 0.5;
    pointer-events: none;
  }

  /* === ANIMATION DELAYS === */
  .hero-intro {
    animation-delay: 0.5s;
  }

  /* === GREETING EFFECTS === */
  .greeting-container {
    position: relative;
    overflow: hidden;
  }

  .greeting-text {
    animation-delay: 0.7s;
    color: var(--text-secondary);
    position: relative;
  }

  .greeting-word {
    display: inline-block;
    margin-right: 0.5rem;
    opacity: 0;
    animation: slideInFromLeft 0.8s cubic-bezier(0.68, -0.55, 0.265, 1.55) forwards;
  }

  .greeting-word:nth-child(1) {
    animation-delay: 0.8s;
  }

  .greeting-word:nth-child(2) {
    animation-delay: 1.0s;
  }

  /* === NAME HIGHLIGHT EFFECTS === */
  .name-highlight {
    position: relative;
    display: inline-block;
    font-weight: 600;
    color: var(--color-accent);
    text-shadow: 0 0 30px rgba(79, 70, 229, 0.5);
    animation: nameGlow 2s ease-in-out infinite alternate;
    filter: drop-shadow(0 0 20px rgba(79, 70, 229, 0.3));
  }

  /* Gradient overlay effect */
  .name-highlight::after {
    content: attr(data-name);
    position: absolute;
    top: 0;
    left: 0;
    background: linear-gradient(135deg, 
      var(--color-accent) 0%, 
      var(--color-secondary) 50%, 
      var(--color-primary) 100%);
    background-size: 300% 300%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradientShift 3s ease-in-out infinite;
    z-index: 1;
  }

  .name-highlight::before {
    content: '';
    position: absolute;
    top: -10px;
    left: -10px;
    right: -10px;
    bottom: -10px;
    background: linear-gradient(45deg, 
      rgba(79, 70, 229, 0.1), 
      rgba(124, 58, 237, 0.1), 
      rgba(5, 150, 105, 0.1));
    border-radius: 12px;
    filter: blur(20px);
    opacity: 0;
    animation: glowPulse 3s ease-in-out infinite;
    z-index: -1;
  }

  .name-letter {
    display: inline-block;
    position: relative;
    opacity: 0;
    transform: translateY(100px) rotateX(90deg);
    animation: letterReveal 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
    transition: all 0.3s ease;
  }

  .name-letter:hover {
    transform: scale(1.2) translateY(-5px);
    text-shadow: 0 10px 20px rgba(79, 70, 229, 0.5);
  }

  /* Staggered animation delays for each letter */
  .name-letter:nth-child(1) { animation-delay: 1.2s; }
  .name-letter:nth-child(2) { animation-delay: 1.3s; }
  .name-letter:nth-child(3) { animation-delay: 1.4s; }
  .name-letter:nth-child(4) { animation-delay: 1.5s; }
  .name-letter:nth-child(5) { animation-delay: 1.6s; }
  .name-letter:nth-child(6) { animation-delay: 1.7s; }
  .name-letter:nth-child(8) { animation-delay: 1.9s; }
  .name-letter:nth-child(9) { animation-delay: 2.0s; }
  .name-letter:nth-child(10) { animation-delay: 2.1s; }
  .name-letter:nth-child(11) { animation-delay: 2.2s; }
  .name-letter:nth-child(12) { animation-delay: 2.3s; }
  .name-letter:nth-child(13) { animation-delay: 2.4s; }

  .name-space {
    width: 0.5rem;
    animation-delay: 1.8s;
  }

  .title-first {
    animation-delay: 0.9s;
  }

  .title-second {
    animation-delay: 1.2s;
  }

  .hero-title {
    color: var(--text-primary);
  }

  .hero-description {
    animation-delay: 1.4s;
  }

  .description-text {
    color: var(--text-secondary);
  }

  .hero-ctas {
    animation-delay: 1.6s;
  }

  .scroll-indicator {
    animation-delay: 3s;
  }

  .scroll-text {
    color: var(--text-muted);
  }

  /* === STATUS BADGE === */
  .status-dot {
    background: var(--color-secondary);
  }

  .status-text {
    color: var(--color-secondary);
  }

  /* === HIGHLIGHTS === */
  .highlight-innovation {
    color: var(--color-accent);
  }

  .highlight-tech {
    color: var(--color-secondary);
  }

  .underline-effect {
    background: var(--gradient-primary);
    animation-delay: 2s;
  }

  .underline-effect-secondary {
    background: var(--gradient-primary);
    animation-delay: 2.2s;
  }

  /* === KEYFRAMES === */
  @keyframes float {
    0%, 100% { 
      transform: translateY(0px) rotate(0deg); 
    }
    33% { 
      transform: translateY(-10px) rotate(1deg); 
    }
    66% { 
      transform: translateY(5px) rotate(-1deg); 
    }
  }

  @keyframes scale-in {
    from {
      transform: scaleX(0);
    }
    to {
      transform: scaleX(1);
    }
  }

  /* === GREETING KEYFRAMES === */
  @keyframes slideInFromLeft {
    0% {
      opacity: 0;
      transform: translateX(-100px) translateY(20px) rotateY(-90deg);
    }
    60% {
      opacity: 0.8;
      transform: translateX(10px) translateY(-5px) rotateY(0deg);
    }
    100% {
      opacity: 1;
      transform: translateX(0) translateY(0) rotateY(0deg);
    }
  }

  @keyframes letterReveal {
    0% {
      opacity: 0;
      transform: translateY(100px) rotateX(90deg) scale(0.3);
    }
    50% {
      opacity: 0.7;
      transform: translateY(-10px) rotateX(0deg) scale(1.1);
    }
    100% {
      opacity: 1;
      transform: translateY(0) rotateX(0deg) scale(1);
    }
  }

  @keyframes gradientShift {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  @keyframes nameGlow {
    0% {
      text-shadow: 0 0 30px rgba(79, 70, 229, 0.5);
      filter: drop-shadow(0 0 20px rgba(79, 70, 229, 0.3));
    }
    100% {
      text-shadow: 0 0 50px rgba(79, 70, 229, 0.8);
      filter: drop-shadow(0 0 40px rgba(79, 70, 229, 0.6));
    }
  }

  @keyframes glowPulse {
    0%, 100% {
      opacity: 0;
      transform: scale(0.8);
    }
    50% {
      opacity: 0.3;
      transform: scale(1.2);
    }
  }

  @keyframes textShimmer {
    0% {
      background-position: -200% center;
    }
    100% {
      background-position: 200% center;
    }
  }

  .animate-scale-in {
    animation: scale-in 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }

  /* === RESPONSIVE === */
  @media (max-width: 768px) {
    .text-6xl {
      font-size: 3rem;
    }
    
    .md\:text-8xl {
      font-size: 4rem;
    }
    
    .text-xl {
      font-size: 1.125rem;
    }
    
    .md\:text-2xl {
      font-size: 1.25rem;
    }
  }

  /* === RESPONSIVE GREETING === */
  @media (max-width: 768px) {
    .greeting-text {
      font-size: 1.5rem;
    }
    
    .name-highlight {
      font-size: 1.75rem;
    }
    
    .name-letter:hover {
      transform: scale(1.1) translateY(-3px);
    }
  }

  @media (max-width: 480px) {
    .greeting-text {
      font-size: 1.25rem;
    }
    
    .name-highlight {
      font-size: 1.5rem;
    }
  }

  /* === ACCESSIBILITY === */
  @media (prefers-reduced-motion: reduce) {
    .animate-bounce,
    .animate-pulse,
    .animate-ping,
    .hero-bg::before,
    .greeting-word,
    .name-letter,
    .name-highlight {
      animation: none;
    }
    
    .name-highlight {
      color: var(--color-accent);
      text-shadow: none;
      filter: none;
    }
    
    .name-highlight::before,
    .name-highlight::after {
      display: none;
    }
    
    .hover-lift:hover,
    .name-letter:hover {
      transform: none;
    }
    
    .greeting-word,
    .name-letter {
      opacity: 1;
      transform: none;
    }
  }

  /* === HIGH CONTRAST MODE === */
  @media (prefers-contrast: high) {
    .name-highlight {
      color: var(--text-primary);
      text-shadow: none;
      filter: none;
    }
    
    .name-highlight::before,
    .name-highlight::after {
      display: none;
    }
  }
</style>
