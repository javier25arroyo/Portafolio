<style>
  /* Animaciones de entrada del navbar */
  .navbar {
    transform: translateY(-100%);
    opacity: 0;
    animation: slideInNav 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 0.2s;
  }

  @keyframes slideInNav {
    0% {
      transform: translateY(-100%);
      opacity: 0;
    }
    100% {
      transform: translateY(0);
      opacity: 1;
    }
  }

  /* Efectos al hacer scroll */
  .navbar.scrolled {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    box-shadow: 0 4px 32px rgba(0, 0, 0, 0.1);
  }

  .dark .navbar.scrolled {
    background: rgba(15, 23, 42, 0.95);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 4px 32px rgba(0, 0, 0, 0.3);
  }

  /* Logo con animación */
  .navbar .logo {
    opacity: 0;
    transform: scale(0.8);
    animation: fadeInScale 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 0.5s;
    min-width: 60px;
  }

  @keyframes fadeInScale {
    0% {
      opacity: 0;
      transform: scale(0.8);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* Links del navbar - animación y estilos unificados */
  .nav-link {
    position: relative;
    opacity: 0;
    transform: translateY(-20px);
    animation: slideInLink 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    white-space: nowrap;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 0.75rem;
    padding: 0.75rem 1.5rem;
    font-weight: 500;
    letter-spacing: 0.025em;
  }

  .nav-link:nth-child(1) { animation-delay: 1.2s; }
  .nav-link:nth-child(2) { animation-delay: 1.3s; }
  .nav-link:nth-child(3) { animation-delay: 1.4s; }
  .nav-link:nth-child(4) { animation-delay: 1.5s; }

  @keyframes slideInLink {
    0% {
      opacity: 0;
      transform: translateY(-20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Efectos hover */
  .nav-link:hover {
    background: rgba(16, 185, 129, 0.12);
    transform: translateY(-2px) scale(1.02);
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.15);
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 1.5rem;
    right: 1.5rem;
    height: 2px;
    background: linear-gradient(90deg, #10b981, #059669);
    transform: scaleX(0);
    transition: transform 0.3s ease;
    border-radius: 1px;
  }
  
  .nav-link:hover::after,
  .nav-link.active::after {
    transform: scaleX(1);
  }

  /* Link activo */
  .nav-link.active {
    color: #10b981;
    background: rgba(16, 185, 129, 0.1);
  }

  /* Animación de letras individuales */
  .nav-anim span {
    display: inline-block;
    opacity: 0;
    transform: translateY(-10px) scale(0.95);
    animation: navLetterIn 0.4s cubic-bezier(0.4,0,0.2,1) forwards;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
  }

  .nav-anim span:nth-child(1) { animation-delay: 1.6s; }
  .nav-anim span:nth-child(2) { animation-delay: 1.65s; }
  .nav-anim span:nth-child(3) { animation-delay: 1.7s; }
  .nav-anim span:nth-child(4) { animation-delay: 1.75s; }
  .nav-anim span:nth-child(5) { animation-delay: 1.8s; }
  .nav-anim span:nth-child(6) { animation-delay: 1.85s; }
  .nav-anim span:nth-child(7) { animation-delay: 1.9s; }
  .nav-anim span:nth-child(8) { animation-delay: 1.95s; }

  @keyframes navLetterIn {
    0% { opacity: 0; transform: translateY(-10px) scale(0.95); }
    100% { opacity: 1; transform: translateY(0) scale(1); }
  }

  /* Animación hover individual para cada letra */
  .nav-link:hover .nav-anim span {
    animation: letterBounce 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  .nav-link:hover .nav-anim span:nth-child(1) { animation-delay: 0s; }
  .nav-link:hover .nav-anim span:nth-child(2) { animation-delay: 0.05s; }
  .nav-link:hover .nav-anim span:nth-child(3) { animation-delay: 0.1s; }
  .nav-link:hover .nav-anim span:nth-child(4) { animation-delay: 0.15s; }
  .nav-link:hover .nav-anim span:nth-child(5) { animation-delay: 0.2s; }
  .nav-link:hover .nav-anim span:nth-child(6) { animation-delay: 0.25s; }
  .nav-link:hover .nav-anim span:nth-child(7) { animation-delay: 0.3s; }
  .nav-link:hover .nav-anim span:nth-child(8) { animation-delay: 0.35s; }

  @keyframes letterBounce {
    0%, 100% { 
      transform: translateY(0) scale(1); 
      color: inherit;
    }
    50% { 
      transform: translateY(-8px) scale(1.1); 
      color: #10b981;
      text-shadow: 0 0 8px rgba(16, 185, 129, 0.4);
    }
  }

  /* Efecto adicional: cambio de color en secuencia */
  .nav-link:hover .nav-anim span {
    animation-fill-mode: forwards;
  }

  /* Botón móvil */
  .mobile-menu-btn {
    opacity: 0;
    transform: scale(0.8);
    animation: fadeInScale 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 1s;
    transition: all 0.3s ease;
    min-width: 60px;
    display: flex;
    justify-content: center;
  }

  .mobile-menu-btn:hover {
    transform: scale(1.1);
    background: rgba(16, 185, 129, 0.1);
    border-radius: 0.75rem;
  }

  /* Menú móvil */
  .mobile-menu {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-top: 1px solid rgba(0, 0, 0, 0.05);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
    transform: translateY(-20px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 0 0 1rem 1rem;
    margin: 0 1rem;
  }

  .dark .mobile-menu {
    background: rgba(15, 23, 42, 0.95);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  .mobile-menu.show {
    transform: translateY(0);
  }

  .mobile-menu .nav-link {
    padding: 1rem 1.5rem;
    margin: 0.5rem;
    border-radius: 0.75rem;
    transition: all 0.3s ease;
    display: block;
    text-align: center;
    font-weight: 500;
  }

  .mobile-menu .nav-link:hover {
    background: rgba(16, 185, 129, 0.12);
    transform: translateX(4px) scale(1.02);
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.15);
  }

  /* Indicador de scroll */
  .scroll-indicator {
    position: absolute;
    bottom: 0;
    left: 0;
    height: 2px;
    background: linear-gradient(90deg, #3b82f6, #10b981);
    transform-origin: left;
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .navbar {
      padding: 0 1rem;
    }
    
    .mobile-menu {
      margin: 0 0.5rem;
    }

    /* Animación más sutil en móviles */
    .nav-link:hover .nav-anim span {
      animation: letterBounceSubtle 0.4s ease-out;
    }

    @keyframes letterBounceSubtle {
      0%, 100% { 
        transform: translateY(0) scale(1); 
      }
      50% { 
        transform: translateY(-3px) scale(1.05); 
        color: #10b981;
      }
    }
  }

  @media (max-width: 640px) {
    .navbar .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
    
    .mobile-menu .nav-link {
      padding: 0.875rem 1rem;
      margin: 0.25rem;
      font-size: 0.95rem;
    }
  }

  @media (min-width: 768px) and (max-width: 1024px) {
    .nav-link {
      padding: 0.65rem 1.25rem;
      font-size: 0.9rem;
    }
  }

  /* Accesibilidad */
  @media (prefers-reduced-motion: reduce) {
    .navbar,
    .nav-link,
    .logo,
    .mobile-menu-btn,
    .nav-anim span {
      animation: none;
      transform: none;
      opacity: 1;
    }
    
    .nav-link:hover {
      transform: none;
    }

    .nav-link:hover .nav-anim span {
      animation: none;
      color: #10b981;
      transition: color 0.2s ease;
    }
  }
</style>

<script>
  // Inicialización del navbar con animaciones
  function initializeNavbar() {
    console.log('🧭 Inicializando Navbar Premium...');
    
    const navbar = document.getElementById('main-nav') as HTMLElement;
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const scrollIndicator = createScrollIndicator();
    
    if (!navbar) {
      console.error('❌ Navbar no encontrado');
      return;
    }

    // Añadir indicador de scroll
    navbar.appendChild(scrollIndicator);
    
    // Mobile menu toggle con animación
    mobileMenuBtn?.addEventListener('click', (e) => {
      e.preventDefault();
      toggleMobileMenu();
    });
    
    // Smooth scrolling mejorado
    initializeSmoothScrolling();
    
    // Scroll effects
    initializeScrollEffects();
    
    // Active link highlighting mejorado
    initializeActiveLinks();
    
    // Navegación por teclado
    initializeKeyboardNavigation();
    
    console.log('✅ Navbar Premium inicializado');
  }

  function createScrollIndicator() {
    const indicator = document.createElement('div');
    indicator.className = 'scroll-indicator';
    return indicator;
  }

  function toggleMobileMenu() {
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    
    if (!mobileMenu || !mobileMenuBtn) return;
    
    const isHidden = mobileMenu.classList.contains('hidden');
    
    if (isHidden) {
      // Mostrar menú
      mobileMenu.classList.remove('hidden');
      setTimeout(() => mobileMenu.classList.add('show'), 10);
      
      // Animar icono del botón
      const icon = mobileMenuBtn.querySelector('svg') as SVGElement;
      if (icon) {
        icon.style.transform = 'rotate(90deg)';
      }
      
      // Feedback háptico
      if ('vibrate' in navigator) {
        navigator.vibrate(5);
      }
    } else {
      // Ocultar menú
      mobileMenu.classList.remove('show');
      setTimeout(() => mobileMenu.classList.add('hidden'), 300);
      
      // Restaurar icono
      const icon = mobileMenuBtn.querySelector('svg') as SVGElement;
      if (icon) {
        icon.style.transform = 'rotate(0deg)';
      }
    }
  }

  function initializeSmoothScrolling() {
    document.querySelectorAll('.nav-link').forEach((link) => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const href = link.getAttribute('href');
        
        if (href) {
          const target = document.querySelector(href);
          if (target) {
            // Efecto de clic
            const htmlLink = link as HTMLElement;
            htmlLink.style.transform = 'scale(0.95)';
            setTimeout(() => {
              htmlLink.style.transform = '';
            }, 150);
            
            // Scroll suave
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
            
            // Cerrar menú móvil
            const mobileMenu = document.getElementById('mobile-menu');
            if (mobileMenu && !mobileMenu.classList.contains('hidden')) {
              toggleMobileMenu();
            }
            
            // Feedback háptico
            if ('vibrate' in navigator) {
              navigator.vibrate(8);
            }
          }
        }
      });
    });
  }

  function initializeScrollEffects() {
    const navbar = document.getElementById('main-nav');
    const scrollIndicator = navbar?.querySelector('.scroll-indicator') as HTMLElement;
    let lastScrollY = 0;
    let ticking = false;
    
    function updateNavbar() {
      const scrollY = window.scrollY;
      const documentHeight = document.documentElement.scrollHeight - window.innerHeight;
      const scrollProgress = scrollY / documentHeight;
      
      if (!navbar) return;
      
      // Efecto de fondo al hacer scroll
      if (scrollY > 50) {
        navbar.classList.add('scrolled');
      } else {
        navbar.classList.remove('scrolled');
      }
      
      // Actualizar indicador de scroll
      if (scrollIndicator) {
        scrollIndicator.style.transform = `scaleX(${scrollProgress})`;
      }
      
      // Ocultar navbar al hacer scroll hacia abajo (opcional)
      const scrollDirection = scrollY > lastScrollY ? 'down' : 'up';
      
      if (scrollDirection === 'down' && scrollY > 100) {
        navbar.style.transform = 'translateY(-100%)';
      } else if (scrollDirection === 'up' || scrollY < 100) {
        navbar.style.transform = 'translateY(0)';
      }
      
      lastScrollY = scrollY;
      ticking = false;
    }
    
    window.addEventListener('scroll', () => {
      if (!ticking) {
        requestAnimationFrame(updateNavbar);
        ticking = true;
      }
    });
  }

  function initializeActiveLinks() {
    const sections = document.querySelectorAll('section[id], div[id]');
    const navLinks = document.querySelectorAll('.nav-link');
    
    function updateActiveLink() {
      let current = '';
      
      sections.forEach(section => {
        const htmlSection = section as HTMLElement;
        const sectionTop = htmlSection.offsetTop - 120;
        const sectionHeight = htmlSection.offsetHeight;
        
        if (window.scrollY >= sectionTop && window.scrollY < sectionTop + sectionHeight) {
          const id = section.getAttribute('id');
          if (id) current = id;
        }
      });
      
      navLinks.forEach(link => {
        link.classList.remove('active', 'text-emerald-500');
        
        if (link.getAttribute('href') === `#${current}`) {
          link.classList.add('active', 'text-emerald-500');
        }
      });
    }
    
    let scrollTimeout: number;
    window.addEventListener('scroll', () => {
      clearTimeout(scrollTimeout);
      scrollTimeout = window.setTimeout(updateActiveLink, 10);
    });
    
    // Actualizar al cargar
    updateActiveLink();
  }

  function initializeKeyboardNavigation() {
    document.addEventListener('keydown', (e) => {
      // ESC para cerrar menú móvil
      if (e.key === 'Escape') {
        const mobileMenu = document.getElementById('mobile-menu');
        if (mobileMenu && !mobileMenu.classList.contains('hidden')) {
          toggleMobileMenu();
        }
      }
      
      // Número + Tab para navegación rápida
      if (e.altKey && e.key >= '1' && e.key <= '4') {
        e.preventDefault();
        const navLinks = document.querySelectorAll('.nav-link');
        const index = parseInt(e.key) - 1;
        if (navLinks[index]) {
          (navLinks[index] as HTMLElement).click();
        }
      }
    });
  }

  // Inicializar cuando el DOM esté listo
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeNavbar);
  } else {
    initializeNavbar();
  }
</script>
