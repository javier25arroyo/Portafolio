          <a href="https://www.linkedin.com/in/javier-arroyo-rojas-268147226" 
             target="_blank" 
             rel="noopener noreferrer"
             class="group relative w-10 h-10 rounded-xl flex items-center justify-center transition-all duration-300 hover:scale-110 social-link" 
             style="background: linear-gradient(135deg, rgba(79, 70, 229, 0.1) 0%, rgba(67, 56, 202, 0.1) 100%); border: 1px solid rgba(79, 70, 229, 0.2);"
             title="LinkedIn">
            <div class="absolute inset-0 bg-gradient-to-r from-blue-500/20 to-indigo-600/20 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <svg class="w-5 h-5 relative z-10 transition-colors duration-300 group-hover:text-blue-400" fill="currentColor" style="color: var(--color-primary);" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Version Info with enhanced styling -->
    <div class="text-center mt-8 pt-6 border-t border-white/10">
      <p class="text-xs opacity-50 hover:opacity-80 transition-opacity duration-300" style="color: var(--text-muted);">
        <span class="font-mono">Portfolio v2025.1</span> 
        <span class="mx-2">•</span> 
        Built with <span class="text-red-400 animate-pulse">❤️</span> using Astro & Modern Web Standards
      </p>
    </div>
  </div>
</footer>

<style>
  /* Enhanced gradient text with better contrast */
  .gradient-text-enhanced {
    background: linear-gradient(135deg, #60A5FA 0%, #A78BFA 50%, #34D399 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 200% 200%;
    animation: gradient-shift 4s ease-in-out infinite;
  }

  /* Improved neon glow effects */
  .hover\:neon-glow:hover {
    box-shadow: 
      0 0 20px rgba(79, 70, 229, 0.4),
      0 0 40px rgba(79, 70, 229, 0.3),
      0 0 60px rgba(79, 70, 229, 0.2),
      inset 0 0 20px rgba(255, 255, 255, 0.1);
  }

  /* Social link hover effects */
  .social-link:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 
      0 10px 25px rgba(0, 0, 0, 0.2),
      0 0 20px rgba(79, 70, 229, 0.3);
  }

  /* Advanced animations */
  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  @keyframes pulse-slow {
    0%, 100% { opacity: 0.6; transform: scale(1); }
    50% { opacity: 0.8; transform: scale(1.05); }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px) translateX(0px) rotate(0deg); }
    25% { transform: translateY(-10px) translateX(5px) rotate(1deg); }
    50% { transform: translateY(-20px) translateX(-5px) rotate(-1deg); }
    75% { transform: translateY(-10px) translateX(5px) rotate(0.5deg); }
  }

  /* Custom animation classes */
  .animate-pulse-slow {
    animation: pulse-slow 4s ease-in-out infinite;
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  /* Backdrop blur support */
  @supports (backdrop-filter: blur(10px)) {
    .backdrop-blur {
      backdrop-filter: blur(10px);
    }
  }

  /* Enhanced responsive design */
  @media (max-width: 768px) {
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
    
    /* Mobile-optimized tech grid */
    .tech-grid-mobile {
      gap: 2rem;
    }
    
    /* Reduce animation intensity on mobile */
    .group:hover .tech-icon {
      transform: scale(1.05) rotate(1deg);
    }
  }

  /* Dark mode optimizations */
  @media (prefers-color-scheme: dark) {
    .social-link {
      border-color: rgba(255, 255, 255, 0.1);
    }
    
    .tech-card {
      border-color: rgba(255, 255, 255, 0.15);
    }
  }

  /* Reduced motion accessibility */
  @media (prefers-reduced-motion: reduce) {
    .animate-pulse-slow,
    .animate-float,
    .gradient-text-enhanced {
      animation: none;
    }
    
    .group:hover .tech-icon {
      transform: none;
    }
    
    .social-link:hover {
      transform: none;
    }
  }

  /* Performance optimizations */
  .tech-icon {
    will-change: transform;
    backface-visibility: hidden;
  }

  .social-link {
    will-change: transform;
    backface-visibility: hidden;
  }
</style>
