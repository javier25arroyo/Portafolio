---
import Button from './Button.astro';
---
<!-- ðŸŽ¨ Hero Section Modernizado -->
<div class="min-h-screen relative overflow-hidden hero-bg">
  
  <!-- Contenido principal con animaciones escalonadas -->
  <div class="relative z-10 flex items-center justify-center min-h-screen pt-16">
    <div class="container mx-auto px-6 py-12">
      
      <!-- Header con introducciÃ³n animada -->
      <div class="text-left mb-8 animate-fade-in-up hero-intro">
        <div class="inline-flex items-center px-4 py-2 rounded-full backdrop-blur-sm mb-6 glass-dark border border-border-light status-badge">
          <div class="w-2 h-2 rounded-full mr-3 animate-ping status-dot"></div>
          <span class="font-medium text-sm status-text">Available for opportunities</span>
        </div>
        
        <p class="text-xl font-light mb-4 animate-fade-in-up greeting-text">
          Hi, I'm Javier Arroyo
        </p>
        
        <!-- TÃ­tulo principal con efecto de escritura mejorado -->
        <h1 class="text-6xl md:text-8xl font-bold leading-tight mb-6 hero-title">
          <span class="block animate-slide-in-left title-first">Software</span>
          <span class="block gradient-text animate-slide-in-right title-second">Developer</span>
        </h1>
      </div>

      <!-- DescripciÃ³n con animaciÃ³n mejorada -->
      <div class="max-w-4xl mb-12 animate-fade-in-up hero-description">
        <p class="text-xl md:text-2xl leading-relaxed font-light description-text">
          Crafting exceptional digital experiences through 
          <span class="font-medium relative text-glow highlight-innovation">
            innovative design
            <span class="absolute -bottom-1 left-0 w-full h-0.5 transform scale-x-0 animate-scale-in underline-effect"></span>
          </span> 
          and 
          <span class="font-medium relative text-glow-secondary highlight-tech">
            cutting-edge technology
            <span class="absolute -bottom-1 left-0 w-full h-0.5 transform scale-x-0 animate-scale-in underline-effect-secondary"></span>
          </span>
        </p>
      </div>

      <!-- CTAs con animaciones mejoradas -->
      <div class="flex flex-col sm:flex-row gap-6 mb-12 animate-fade-in-up hero-ctas">
        <a href="#projects" class="btn-primary group inline-flex items-center justify-center gap-3 hover-lift" data-track="hero-view-work">
          <span>View My Work</span>
          <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        
        <a href="#contact" class="btn-secondary group inline-flex items-center justify-center gap-3 hover-lift" data-track="hero-lets-connect">
          <span>Let's Connect</span>
          <svg class="w-5 h-5 transform group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </a>
      </div>

      <!-- Scroll indicator mejorado -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce scroll-indicator">
        <div class="flex flex-col items-center gap-2 scroll-text">
          <span class="text-xs font-medium">Scroll to explore</span>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- ðŸŽ¨ Estilos personalizados para animaciones -->
<style>
  /* === BACKGROUND === */
  .hero-bg {
    background: var(--gradient-hero);
    position: relative;
  }

  .hero-bg::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: 
      radial-gradient(circle at 20% 80%, rgba(79, 70, 229, 0.15) 0%, transparent 70%),
      radial-gradient(circle at 80% 20%, rgba(124, 58, 237, 0.12) 0%, transparent 70%),
      radial-gradient(circle at 40% 40%, rgba(5, 150, 105, 0.08) 0%, transparent 70%);
    animation: float 20s ease-in-out infinite;
    pointer-events: none;
  }

  .hero-bg::after {
    content: '';
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(var(--border-subtle) 1px, transparent 1px),
      linear-gradient(90deg, var(--border-subtle) 1px, transparent 1px);
    background-size: 50px 50px;
    opacity: 0.5;
    pointer-events: none;
  }

  /* === ANIMATION DELAYS === */
  .hero-intro {
    animation-delay: 0.5s;
  }

  .greeting-text {
    animation-delay: 0.7s;
    color: var(--text-secondary);
  }

  .title-first {
    animation-delay: 0.9s;
  }

  .title-second {
    animation-delay: 1.2s;
  }

  .hero-title {
    color: var(--text-primary);
  }

  .hero-description {
    animation-delay: 1.4s;
  }

  .description-text {
    color: var(--text-secondary);
  }

  .hero-ctas {
    animation-delay: 1.6s;
  }

  .scroll-indicator {
    animation-delay: 3s;
  }

  .scroll-text {
    color: var(--text-muted);
  }

  /* === STATUS BADGE === */
  .status-dot {
    background: var(--color-secondary);
  }

  .status-text {
    color: var(--color-secondary);
  }

  /* === HIGHLIGHTS === */
  .highlight-innovation {
    color: var(--color-accent);
  }

  .highlight-tech {
    color: var(--color-secondary);
  }

  .underline-effect {
    background: var(--gradient-primary);
    animation-delay: 2s;
  }

  .underline-effect-secondary {
    background: var(--gradient-primary);
    animation-delay: 2.2s;
  }

  /* === KEYFRAMES === */
  @keyframes float {
    0%, 100% { 
      transform: translateY(0px) rotate(0deg); 
    }
    33% { 
      transform: translateY(-10px) rotate(1deg); 
    }
    66% { 
      transform: translateY(5px) rotate(-1deg); 
    }
  }

  @keyframes scale-in {
    from {
      transform: scaleX(0);
    }
    to {
      transform: scaleX(1);
    }
  }

  .animate-scale-in {
    animation: scale-in 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }

  /* === RESPONSIVE === */
  @media (max-width: 768px) {
    .text-6xl {
      font-size: 3rem;
    }
    
    .md\:text-8xl {
      font-size: 4rem;
    }
    
    .text-xl {
      font-size: 1.125rem;
    }
    
    .md\:text-2xl {
      font-size: 1.25rem;
    }
  }

  /* === ACCESSIBILITY === */
  @media (prefers-reduced-motion: reduce) {
    .animate-bounce,
    .animate-pulse,
    .animate-ping,
    .hero-bg::before {
      animation: none;
    }
    
    .hover-lift:hover {
      transform: none;
    }
  }
</style>
