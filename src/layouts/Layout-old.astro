    <!-- Header con navegación -->
    <div class="relative">
      <Navigation />
    </div>

    <main class="min-h-screen">
      <slot />
    </main>
    <footer class="bg-slate-900 text-slate-100 py-8">
      <div class="container mx-auto text-center">
        <p class="text-sm">© 2025 Javier Arroyo. All rights reserved.</p>
      </div>
    </footer>

    <style>
      #soft-skills {
        background: linear-gradient(90deg, rgba(16,185,129,0.08) 0%, rgba(59,130,246,0.06) 100%);
        border-radius: 1.2rem;
        box-shadow: 0 4px 24px 0 rgba(16,185,129,0.07);
        margin-top: 2.5rem;
        padding-top: 1.5rem;
        padding-bottom: 1.5rem;
      }
      .soft-skill-item {
        background: rgba(16,185,129,0.13);
        color: #10b981;
        font-weight: 600;
        font-size: 0.95rem;
        padding: 0.8rem 1.2rem;
        border-radius: 2rem;
        box-shadow: 0 2px 8px 0 rgba(16,185,129,0.08);
        transition: background 0.2s, color 0.2s, transform 0.2s;
        letter-spacing: 0.02em;
        margin-bottom: 0.5rem;
        text-align: center;
        white-space: nowrap;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 50px;
      }
      .soft-skill-item:hover {
        background: #10b981;
        color: #fff;
        transform: translateY(-4px) scale(1.06);
        box-shadow: 0 4px 16px 0 rgba(16,185,129,0.18);
      }
    </style>
    
    <script>
      // Declaraciones globales para TypeScript
      declare global {
        interface Window {
          layoutInitialized?: boolean;
        }
      }

      // Animación de carga de página
      function initializePageLoad() {
        const body = document.body;
        
        // Agregar clase de cargado después de un breve delay
        setTimeout(() => {
          body.classList.remove('page-loading');
          body.classList.add('page-loaded');
        }, 100);
      }

      // Scroll suave mejorado para navegación
      function initializeSmoothScroll() {
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
          anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const href = this.getAttribute('href');
            if (href) {
              const target = document.querySelector(href);
              if (target) {
                target.scrollIntoView({
                  behavior: 'smooth',
                  block: 'start'
                });
              }
            }
          });
        });
      }

      // Prevenir múltiples inicializaciones
      if (!window.layoutInitialized) {
        window.layoutInitialized = true;
        
        // Inicialización cuando el DOM esté listo
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', () => {
            initializePageLoad();
            initializeSmoothScroll();
          });
        } else {
          initializePageLoad();
          initializeSmoothScroll();
        }
      }
    </script>
    
    <!-- UX Enhancements -->
    <UXEnhancements />
  </body>
</html>