---
import Navigation from '../components/Navigation.astro';
import UXEnhancements from '../components/UXEnhancements.astro';
import '../styles/global.css';
import '../styles/shared.css';
---
<!doctype html>
<html lang="en" class="font-sans">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Professional Portfolio</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    
    <style>
      /* Scroll suave global */
      html {
        scroll-behavior: smooth;
      }

      /* Mejoras de accesibilidad y UX */
      *, *::before, *::after {
        box-sizing: border-box;
      }

      /* Transiciones globales */
      body {
        transition: background-color 0.3s ease, color 0.3s ease;
        overflow-x: hidden;
      }

      /* Loading state para mejor UX */
      .page-loading {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
      }

      .page-loaded {
        opacity: 1;
        transform: translateY(0);
      }

      /* Foco visible mejorado para accesibilidad */
      :focus-visible {
        outline: 2px solid #3b82f6;
        outline-offset: 2px;
        border-radius: 4px;
      }
    </style>
  </head>
    <body class="bg-slate-900 text-slate-100 page-loading" style="font-family: 'Montserrat', sans-serif;">
    
    <!-- Header con navegación -->
    <div class="relative">
      <Navigation />
    </div>

    <main class="min-h-screen">
      <slot />
    </main>
    <footer class="bg-slate-900 text-slate-100 py-8">
      <div class="container mx-auto text-center">
        <p class="text-sm">© 2025 Javier Arroyo. All rights reserved.</p>
      </div>
    </footer>

    <style>
      #soft-skills {
        background: linear-gradient(90deg, rgba(16,185,129,0.08) 0%, rgba(59,130,246,0.06) 100%);
        border-radius: 1.2rem;
        box-shadow: 0 4px 24px 0 rgba(16,185,129,0.07);
        margin-top: 2.5rem;
        padding-top: 1.5rem;
        padding-bottom: 1.5rem;
      }
      .soft-skill-item {
        background: rgba(16,185,129,0.13);
        color: #10b981;
        font-weight: 600;
        font-size: 0.95rem;
        padding: 0.8rem 1.2rem;
        border-radius: 2rem;
        box-shadow: 0 2px 8px 0 rgba(16,185,129,0.08);
        transition: background 0.2s, color 0.2s, transform 0.2s;
        letter-spacing: 0.02em;
        margin-bottom: 0.5rem;
        text-align: center;
        white-space: nowrap;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 50px;
      }
      .soft-skill-item:hover {
        background: #10b981;
        color: #fff;
        transform: translateY(-4px) scale(1.06);
        box-shadow: 0 4px 16px 0 rgba(16,185,129,0.18);
      }
    </style>
    
    <script>
      // Declaraciones globales para TypeScript
      declare global {
        interface Window {
          layoutInitialized?: boolean;
        }
      }

      // Animación de carga de página
      function initializePageLoad() {
        const body = document.body;
        
        // Agregar clase de cargado después de un breve delay
        setTimeout(() => {
          body.classList.remove('page-loading');
          body.classList.add('page-loaded');
        }, 100);
      }

      // Scroll suave mejorado para navegación
      function initializeSmoothScroll() {
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
          anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const href = this.getAttribute('href');
            if (href) {
              const target = document.querySelector(href);
              if (target) {
                target.scrollIntoView({
                  behavior: 'smooth',
                  block: 'start'
                });
              }
            }
          });
        });
      }

      // Prevenir múltiples inicializaciones
      if (!window.layoutInitialized) {
        window.layoutInitialized = true;
        
        // Inicialización cuando el DOM esté listo
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', () => {
            initializePageLoad();
            initializeSmoothScroll();
          });
        } else {
          initializePageLoad();
          initializeSmoothScroll();
        }
      }
    </script>
    
    <!-- UX Enhancements -->
    <UXEnhancements />
  </body>
</html>